<div class="container mt-3">
  <div class="d-flex justify-content-between align-items-center">
    <h1>Available Flats</h1>
    <%= link_to new_flat_path, class: 'text-dark text-decoration-none' do %>
      <i class="fa-solid fa-plus"></i>
    <% end %>
  </div>
<div class="cards">
    <% @flats.each do |flat| %>
      <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3))">
        <h2><%= link_to flat.name, flat_path(flat), class: 'text-decoration-none text-white' %></h2>
          <div class="flex">
            <div class="flex align-items-center">
              <i class="fa-solid fa-person"><%= flat.number_of_guests %></i>
            </div>
          </div>
    <% end %>
  </div>
</div>
